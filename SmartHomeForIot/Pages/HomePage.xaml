<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmartHomeForIot.ViewModels"
             x:DataType="{x:Type viewmodels:HomeViewModel}"             
             x:Class="SmartHomeForIot.Pages.HomePage"
             Title="HomePage">

    <Grid RowDefinitions="*, auto" Margin="20">
        <VerticalStackLayout Grid.Row="0">
            <Label Text=""  />
            <Button Text="{Binding ToggleButtonText}" Command="{Binding ToggleDeviceStateCommand}" HorizontalOptions="Center" VerticalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>